
@{
    ViewBag.Title = "Tabs";
    string align = "text-right";
    string alignInverse = "text-left";
    string dir = "ltr";
    if (ViewBag.lang == "ar")
    {
        align = "text-left";
        alignInverse = "text-right";
        dir = "rtl";
    }


}

<style>
    td, th {
        text-align: center !important;
    }
</style>



@if (ViewBag.RESPO_STATE > 1 && ViewBag.RESPO_STATE <= 4)
{
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">

                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row justify-content-center align-self-center">
                            <div class="btn-group">
                              

                                <a class="btn btn-outline-primary  text-center @if (ViewBag.activetab == "Create") { <text>active</text>} " href="@Url.Action("Create", ViewBag.controllerName, null)">
                                    <i class="fa fa-external-link-square-alt"></i>
                                    &nbsp;
                                    @Resources.Passes.ResourceManager.GetString("create_for_one_worker" + "_" + ViewBag.lang)
                                </a>

                                <a class="btn btn-outline-primary  text-center @if (ViewBag.activetab == "Supercreate") { <text>active</text>} " href="@Url.Action("Supercreate", ViewBag.controllerName, null)">
                                    <i class="fa fa-expand-arrows-alt"></i>
                                    &nbsp;
                                    @Resources.Passes.ResourceManager.GetString("create_for_many_workers" + "_" + ViewBag.lang)
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
    </div>


}
else
{

    var url = Url.RequestContext.RouteData.Values["id"];
    var id = int.Parse(url.ToString());

    if (ViewBag.RESPO_STATE > 1 && ViewBag.RESPO_STATE <= 4)
    {
    <div class="col-md-12 @align">
        <a href="~/@ViewBag.lang/Mypasses/Select/@id" class="btn btn-outline-dark">
            <i class="fa fa-backward"></i>
            @Resources.Passes.ResourceManager.GetString("back" + "_" + ViewBag.lang)
        </a>
    </div>
    }
}

