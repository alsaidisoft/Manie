                                                @Resources.Passes.ResourceManager.GetString("Property_expired" + "_" + ViewBag.lang)

                                                <p class="text-primary" id="date">
                                                    @if (Model.DATE_TO != null)
                                                    {@Model.DATE_TO.Value.ToString("dd/MM/yyyy")}
