                                    <div class="form-group">
                                        <div class="control-label">
                                            @Resources.Passes.ResourceManager.GetString("forces" + "_" + ViewBag.lang)
                                        </div>
                                        <select class="form-control" name="FORCE"  style="width:100%;" onchange="handleSelectChange(this)">
                                            @foreach (var ltfo in ViewBag.FORCES_CODE)
                                            {
                                                
                                                <option value="@ltfo.Value" @(ltfo.Value == force ? "selected" : "")>@ltfo.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    }
                    <table class="table text-center table-striped table-bordered table-responsive">
                        <thead>
                            <tr class="bg-light">
                                <th colspan="@ViewBag.STATIONS_LIST.Count">
                                    <h4 class="text-center text-uppercase">
                                        @Resources.Common.ResourceManager.GetString("phoen_numbers" + "_" + ViewBag.lang)
                                    </h4>
                                </th>
                            </tr>

                            <tr class="bg-primary text-white">
                                @foreach (var item in ViewBag.STATIONS_LIST)
                                {

                                    if (ViewBag.lang == "ar")
                                    {
                                        <th>@item.STATION_NAME_A</th>
                                    }
                                    else
                                    {
                                        <th>@item.STATION_NAME_E</th>

                                    }

                                }
                            </tr>

                        </thead>
                        <tbody class="text-dark">
                            <tr>
                                @foreach (var item in ViewBag.STATIONS_LIST)
                                {

                                    <td> <i class="fa fa-phone"></i> @item.PHONE_NUMBER</td>


                                }
                            </tr>

                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>
</div>
