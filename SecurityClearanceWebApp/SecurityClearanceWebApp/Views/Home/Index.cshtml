                <div id="jssor_1" style="position:relative;margin:0 auto;top:0px;left:0px;width:1000px;height:380px;overflow:hidden;visibility:hidden;">
                    <!-- Loading Screen -->
                    <div data-u="loading" class="jssorl-004-double-tail-spin" style="position:absolute;top:0px;left:0px;width:100%;height:100%;text-align:center;background-color:rgba(0,0,0,0.7);">
                        <img style="margin-top:-19px;position:relative;top:50%;width:38px;height:38px;" src="~/Content/images/double-tail-spin.svg" />
                    </div>
                    <div data-u="slides" style="cursor:default;position:relative;top:0px;left:0px;width:980px;height:380px;overflow:hidden;">


                        @foreach (var slider in ViewBag.SLIDER)
                        {
                            <div style="background-color:#000000;">
                                <img data-u="image" style="opacity:1.5;" src="@Url.Content( "~/Files/Others/"+slider.SLIDER_IMAGE)" />
                                <div data-ts="flat" data-p="320" style="left:144px;top:80px;width:80%;height:100%;position:absolute;overflow:hidden;">
                                    <div data-to="50% 50%" data-ts="preserve-3d" data-t="0" style="left:550px;top:0px;width:80%;height:300px;position:absolute;overflow: hidden;">
                                        <h1 style="color: orangered; margin: 0; text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black; ">
                                            @if (ViewBag.lang == "ar")
                                            {@slider.SLIDER_TITLE_A}
                                        else
                                        { @slider.SLIDER_TITLE_E}
                                        </h1>
                                        <h5 style="font-weight: bold;color: #fff;text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;" class="text-justify">
                                            @if (ViewBag.lang == "ar")
                                            {
                                                @slider.DESCRIPTION_A
                                            }
                                            else
                                            {
                                                @slider.DESCRIPTION_E
                                            }


                                        </h5>

                                    </div>
                                </div>
                            </div>

                        }
