                            <h4 class="text-center">
                                <a href="http://mamrafowebgov01/AppsFeedback?app-name=Hisn" target="_blank" class="text-military">
                                    @Resources.Common.ResourceManager.GetString("rate_us" + "_" + ViewBag.lang)
                                </a>
