
@{
    ViewBag.Title = "Tabs";
    string align = "text-right";
    string alignInverse = "text-left";
    string dir = "ltr";
    if (ViewBag.lang == "ar")
    {
        align = "text-left";
        alignInverse = "text-right";
        dir = "rtl";
    }


}

<style>
    td, th {
        text-align: center !important;
    }
</style>



@if (ViewBag.RESPO_STATE > 1 && ViewBag.RESPO_STATE <= 4)
{
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">

                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row justify-content-center align-self-center">
                            <div class="btn-group">
                                @if (ViewBag.FORCE_TYPE_CODE != 2)
                                {
                                    <a class="btn btn-outline-primary  text-center @if (ViewBag.activetab == "Create")
                                { <text>active</text>} " href="@Url.Action("Create", ViewBag.controllerName, null)">
                                        <i class="fa fa-external-link-alt"></i>
                                        &nbsp;
                                        @Resources.Passes.ResourceManager.GetString("Trainee_pass_create" + "_" + ViewBag.lang)
                                    </a>

                                }

                                @if (ViewBag.FORCE_TYPE_CODE == 2)
                                {
                                    <a class="btn btn-outline-primary  text-center @if (ViewBag.activetab == "Create")
                                { <text>active</text>} " href="@Url.Action("Create", ViewBag.controllerName, null)">
                                        <i class="fa fa-external-link-alt"></i>
                                        &nbsp;
                                        @Resources.Passes.ResourceManager.GetString("Trainee_pass_create" + "_" + ViewBag.lang)
                                    </a>
                                    <a class="btn btn-outline-primary  text-center @if (ViewBag.activetab == "ProveIdentityForWorker")
                                    { <text>active</text>} " href="@Url.Action("ProveIdentityForWorker", ViewBag.controllerName, null)">
                                        <i class="fa fa-outdent"></i> <i class="fa fa-expand-arrows-alt"></i>
                                        &nbsp;
                                        @Resources.Passes.ResourceManager.GetString("prove_identity_for_worker" + "_" + ViewBag.lang)
                                    </a>

                                    <a class="btn btn-outline-primary  text-center @if (ViewBag.activetab == "ProveIdentityForBusAdmin")
                                    { <text>active</text>} " href="@Url.Action("ProveIdentityForBusAdmin", ViewBag.controllerName, null)">
                                        <i class="fa fa-outdent"></i> <i class="fa fa-expand-arrows-alt"></i>
                                        &nbsp;
                                        @Resources.Passes.ResourceManager.GetString("prove_identity_for_admin_bus" + "_" + ViewBag.lang)
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
else
{

    var url = Url.RequestContext.RouteData.Values["id"];
    var id = int.Parse(url.ToString());

    if (ViewBag.RESPO_STATE > 1 && ViewBag.RESPO_STATE <= 4)
    {
    <div class="col-md-12 @align">
        <a href="~/@ViewBag.lang/Mypasses/Select/@id" class="btn btn-outline-dark">
            <i class="fa fa-backward"></i>
            @Resources.Passes.ResourceManager.GetString("back" + "_" + ViewBag.lang)
        </a>
    </div>
    }
}

